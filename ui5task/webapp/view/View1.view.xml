<mvc:View
    controllerName="ui5task.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
            
					<content>
                    <HBox >
                    <List
                        headerText="list"
                        width="auto"
                        items="{invoice>/}">
                    <items>
                    <ObjectListItem
                     title="{invoice>Country}"/>
                    </items>
                </List>

                    </HBox>
                    </content>

				</Page>
			</pages>
		</App>
	</Shell>
    
</mvc:View>
